<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<g:HTMLPanel width="100%">
		<g:VerticalPanel width="100%" spacing="2" ui:field="pnlMain">
			<g:Label text="IMPRIMER LES BULLETINS" horizontalAlignment="ALIGN_CENTER" styleName="pageTitle"/>
			<g:VerticalPanel styleName="subSection" spacing="5">
					<g:HorizontalPanel width="400px" spacing="2" horizontalAlignment="ALIGN_RIGHT" ui:field="pnlAdmin">
					<g:Label text="Classe :"/>
					<g:ListBox ui:field="lstClasses" width="300px"/>
				</g:HorizontalPanel>
					<g:HorizontalPanel spacing="2" width="400px" horizontalAlignment="ALIGN_RIGHT">
					<g:Label text="Bulletin(s) :"/>
					<g:ListBox width="300px" ui:field="lstBulletins"/>
				</g:HorizontalPanel>
					<g:Button ui:field="cmdPrint">Imprimer</g:Button>
				</g:VerticalPanel>
			<g:VerticalPanel width="100%" horizontalAlignment="ALIGN_LEFT" spacing="5" ui:field="pnlBulletin" styleName="bulletin">
				<g:Grid width="100%">
					<g:row>
						<g:customCell>
							<g:Image url="images/logo_lemania.png" width="292" height="100"/>
						</g:customCell>
						<g:customCell>
							<g:Label text="BULLETIN DE NOTES" styleName="bulletinTitle"/>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:VerticalPanel spacing="5">
								<g:Label text="-" ui:field="lblStudentName" styleName="fieldTitle"/>
								<g:Label text="-" ui:field="lblClassName" styleName="fieldTitle"/>
							</g:VerticalPanel>
						</g:customCell>
						<g:customCell>
							<g:HTML wordWrap="true" styleName="bulletinNote">Critère de réussite :
<ul>
<li>Meilleure note :  6</li>
<li>Moyenne : 4</li>
</ul>
La note moyenne indiquée est calculée en fonction des critères de réussite du diplôme postulé.</g:HTML>
						</g:customCell>
					</g:row>
				</g:Grid>
				<g:FlexTable width="100%" cellPadding="3" ui:field="tblNotes"/>
				<g:HorizontalPanel width="100%" styleName="subSection">
					<g:Label text="Direction :" width=""/>
					<g:TextArea width="" characterWidth="90" visibleLines="5" styleName="sis-TextArea"/>
				</g:HorizontalPanel>
				<g:VerticalPanel width="100%" horizontalAlignment="ALIGN_CENTER" spacing="2">
					<g:Label text="Chemin de Préville 3 - CP 550, 1003 Lausanne, Suisse - Tel.: +41 21 320 15 01 - Fax.: +41 312 67 00 "/>
					<g:Label text="Email: info@lemania.ch - Site internet : www.lemania.ch "/>
				</g:VerticalPanel>
			</g:VerticalPanel>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder>
